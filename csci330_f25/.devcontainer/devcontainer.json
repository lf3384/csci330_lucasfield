{
    "name": "C++ Course Development Environment",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "cpp-dev",
    "workspaceFolder": "/home/student/workspace",
    
    // Configure VS Code settings
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "C_Cpp.default.cppStandard": "c++17",
                "C_Cpp.default.compilerPath": "/usr/bin/g++",
                "C_Cpp.clang_format_style": "Google",
                "editor.formatOnSave": true,
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "files.associations": {
                    "*.cpp": "cpp",
                    "*.h": "cpp",
                    "*.hpp": "cpp"
                }
            },
            
            // Essential extensions for C++ development
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "vadimcn.vscode-lldb",
                "twxs.cmake",
                "ms-vscode.cpptools-themes"
            ]
        }
    },
    
    // Port forwarding (if needed for future web-based projects)
    "forwardPorts": [],
    
    // Run commands after container is created
    "postCreateCommand": "echo 'Welcome to C++ Course Development Environment!'",
    
    // Run as non-root user
    "remoteUser": "student",
    
    // Environment variables
    "remoteEnv": {
        "DISPLAY": "${localEnv:DISPLAY}"
    },
    
    // Mounts (additional to docker-compose volumes)
    "mounts": [],
    
    // Features to add to the container
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    }
}